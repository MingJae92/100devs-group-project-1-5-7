<html>
	<head>
		<title>CrossFlex - Ultimate Daily Workout</title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
		<link rel="stylesheet" href="assets/css/main.css" />
	</head>
	<body class="is-preload">
		
		<div id="page-wrapper">
			<img class="bg-corner" src="images/corner1.jpg">

				<!-- Header -->
				<header id="header" class="alt">
					<h1><a href="/">CrossFlex - Ultimate Daily Workout</a></h1>
					<nav id="nav">
						<ul>
							<li><a href="/">Home</a></li>
							<li><a href="/login">Log In</a></li>
						</ul>
					</nav>
				</header>

			<!-- Main -->
				<section id="main" class="container">
					<header>
						<h2> <img src="images/logo.png" alt="CrossFlex - Ultimate Daily Workout"> <h2>
					</header>
					<div class="box">
						<span class="image featured"><img src="images/pic01.jpg" alt="" /></span>
						<h3>Sign Up</h3>

						<% if (locals.messages.errors) { %>
							<% messages.errors.forEach( el => { %>
								<div class="alert alert-danger"><%= el.msg %></div>
							<% }) %>    
						<% } %>
						<div class="row">
							
							<form action="/signup" method="POST">
								<input type="text" name="userName" placeholder="User Name">
								<input type="email" name="email" placeholder="Email">
								<input type="password" name="password" placeholder="Password">
								<input type="password" name="confirmPassword" placeholder="Confirm Password">
								<input type="submit">
							</form>

						</div>
					</div>
				</section>

			<!-- Footer -->
			<footer id="footer">
				<ul class="icons">
					<li><a href="#" class="icon brands fa-twitter"><span class="label">Twitter</span></a></li>
					<li><a href="#" class="icon brands fa-facebook-f"><span class="label">Facebook</span></a></li>
					<li><a href="#" class="icon brands fa-instagram"><span class="label">Instagram</span></a></li>
					<li><a href="#" class="icon brands fa-github"><span class="label">Github</span></a></li>
					<li><a href="#" class="icon brands fa-dribbble"><span class="label">Dribbble</span></a></li>
					<li><a href="#" class="icon brands fa-google-plus"><span class="label">Google+</span></a></li>
				</ul>
				<ul class="copyright">
					<li>&copy; CrossFlex. All rights reserved.</li>
				</ul>
			</footer>

	</div>

	<!-- Scripts -->
		<script src="assets/js/jquery.min.js"></script>
		<script src="assets/js/jquery.dropotron.min.js"></script>
		<script src="assets/js/jquery.scrollex.min.js"></script>
		<script src="assets/js/browser.min.js"></script>
		<script src="assets/js/breakpoints.min.js"></script>
		<script src="assets/js/util.js"></script>
		<script src="assets/js/main.js"></script>

</body>
</html>